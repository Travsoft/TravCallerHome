<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.CarTravelsDailerApp" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/orange</item>
        <item name="colorPrimaryVariant">@color/orange</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/orange</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="callerBt">
        <item name="android:textColor">@color/black</item>
        <item name="android:layout_height">70dp</item>
        <item name="android:layout_margin">1dp</item>
        <item name="android:textSize">@dimen/dialpad_btn_size</item>
        <item name="android:background">@drawable/dialer_btn_ripple</item>
        <item name="android:gravity">center</item>
    </style>
    <style name="popup_window_animation">
        <item name="android:windowEnterAnimation">@anim/popup_anim</item>
        <item name="android:windowExitAnimation">@anim/popdown_anim</item>
    </style>
</resources>