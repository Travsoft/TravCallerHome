<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.CarTravelsDailerApp" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/orange</item>
        <item name="colorPrimaryVariant">@color/orange</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/orange</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="android:editTextColor">@color/orange</item>
        <item name="android:textColorHint">@color/orange</item>

    </style>

    <style name="callerBt">
        <item name="android:textColor">@color/black</item>
        <item name="android:layout_height">70dp</item>
        <item name="android:layout_margin">1dp</item>
        <item name="android:textSize">@dimen/dialpad_btn_size</item>
        <item name="android:background">@drawable/dialer_btn_ripple</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="popup_window_animation">
        <item name="android:windowEnterAnimation">@anim/popup_anim</item>
        <item name="android:windowExitAnimation">@anim/popdown_anim</item>
    </style>

    <style name="DialpadButtonStyle">
        <item name="android:layout_width">80dp</item>
        <item name="android:layout_height">80dp</item>
    </style>

    <style name="DialpadNumberStyle">
        <item name="android:includeFontPadding">false</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_centerInParent">true</item>
    </style>

    <style name="DialpadLetterStyle">
        <item name="android:textSize">16sp</item>
        <item name="android:alpha">0.8</item>
        <item name="android:layout_centerInParent">true</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_centerHorizontal">true</item>
    </style>
</resources>